<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SearchBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--main hinh trang chu-->
    <style name="text_main" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>
    <style name="text_sub">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <!-- color button menu lich cong tac -->
    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#222222</item>
        <item name="fab_colorPressed">#888888</item>
        <item name="fab_colorRipple">#444444</item>
    </style>

    <style name="boldtext">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">20px</item>
    </style>

    <style name="textcontent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">10px</item>
    </style>

    <!-- button action chi tiet van ban den-->
    <style name="buttonChiTiet" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
        <item name="android:gravity">center</item>
    </style>

    <!--style table title-->
    <style name="table_title">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#006c9b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">20px</item>
    </style>

    <!--style table content-->
    <style name="table_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>

    </style>

    <!--test-->
    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>

</resources>
