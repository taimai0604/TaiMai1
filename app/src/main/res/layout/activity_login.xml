<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mac01.democucthue.LoginActivity">
    <ImageView
        android:id="@+id/a_l_imgView"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:srcCompat="@mipmap/ic_logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/a_l_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CỤC THUẾ THÀNH PHỐ HỒ CHÍ MINH"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/a_l_imgView"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/a_l_edUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Tài khoản"
        android:textColor="#4a4a4a"
        android:textColorHint="#4a4a4a"
        android:background="#cbcbcb"
        android:padding="20px"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_l_title" />

    <EditText
        android:id="@+id/a_l_edPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:textColor="#4a4a4a"
        android:textColorHint="#4a4a4a"
        android:background="#cbcbcb"
        android:padding="20px"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/a_l_edUsername"
        android:hint="Mật khẩu"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/a_l_btnLogin"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#006c9b"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_l_edPass"
        app:layout_constraintVertical_bias="0.351"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
